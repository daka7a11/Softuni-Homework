<h1 class="text-center mt-2">My Collection</h1>
<div class="row mt-2 mb-4">
    @foreach (var view in Model)
    {
    <div class="card col-6 col-lg-3 game-card">
        <img src="@view.Image"
             class="card-img-top img-fluid card-image">
        <div class="card-body">
            <h5 class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="Description:<br>@view.Description">
                @view.Name
            </h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">Challenger</li>
                <li class="list-group-item">
                    <span class="attack-stat">@view.Attack</span>
                    <span class="health-stat">@view.Health</span>
                </li>
            </ul>
            <a href="/Cards/RemoveFromCollection?cardId=@view.Id" class="btn btn-block btn-danger">Remove from Collection</a>
        </div>
    </div>
    }
</div>
